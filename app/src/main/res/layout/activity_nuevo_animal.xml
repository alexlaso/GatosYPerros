<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NuevoAnimal">

    <EditText
        android:id="@+id/textViewNombreNuevo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Inserte el nombre del nuevo animal"
        android:inputType="text" />

    <EditText
        android:id="@+id/textViewRazaNuevo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Inserte la raza del nuevo animal"
        android:inputType="text"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/textViewEspecieNuevo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Inserte la especie del nuevo animal"
        android:inputType="text"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/buttonGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar" />

</LinearLayout>